<html>
    <head>
        <style>
            canvas{
                background-color: rgb(195, 210, 210);
            }
            body{
                background-color: black;
            }
        </style>
    </head>
    <body>
        <canvas width="500" height="500" id="myCanvas"></canvas>
        <script>
            var canvas= document.getElementById('myCanvas');
            var ctx= canvas.getContext('2d');
            
            ctx.beginPath();
            var grd= ctx.createLinearGradient (150,150,200,100);
            grd.addColorStop(0, "#FF5733");
            grd.addColorStop(1, "#86FF33");

            ctx.fillStyle = grd;
            ctx.fillRect(190,190,210,210);


            ctx.fillStyle = "red";
            ctx.fillRect(100,40,80,80);
            ctx.fillStyle = "green";
            ctx.fillRect(100,100,80,80);
            ctx.fillStyle = "blue";
             ctx.fillRect(90,160,80,80);



             ctx.beginPath();
             ctx.arc(100,380,50,0,2* Math.PI);
             ctx.fillStyle = "blue";
             ctx.fill();
             ctx.closePath();

             ctx.beginPath();
             ctx.arc(500,380,50,0,2* Math.PI);
             ctx.strokeStyle="red";
             ctx.stroke();
             ctx.closePath();


        </script>
    </body>
</html>
